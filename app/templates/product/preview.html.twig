<div class="preview">
    <a href="{{ path('details', {sku: product.sku}) }}">
        <figure>
                <img src="{{ product._embedded.images.0.thumbnail }}"/>
        </figure>
        <span class="sku">#{{ product.sku }}</span>
        <span>{{ product.name }} </span>
        <span>{{ product._embedded.brand.name }}</span>
        <span>${{ product.price|number_format(2, '.', ',') }}</span>
    </a>
</div>
